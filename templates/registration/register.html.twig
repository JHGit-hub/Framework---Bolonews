{% extends 'base.html.twig' %}

{% block title %}Cr√©ation de compte{% endblock %}

{% block body %}
<div class="form-login">
    <h3>Enregistrement de compte</h3>
    {{ form_start(registrationForm , {'attr': {'novalidate': 'novalidate'}})}}
        <div class="label-form">
            <!-- label -->
            {{ form_label(registrationForm.email) }}
            <!-- input -->
            {{ form_widget(registrationForm.email, {
                "attr": { 'class': "form-control " ~ (registrationForm.email.vars.errors|length >0 ? "input-error" : '')}
            }) }}
            <!-- errors -->
            {{ form_errors(registrationForm.email, {"attr":{ "class": 'p-error'}}) }}
        </div>
        <div class="label-form">
            <!-- label -->
            {{ form_label(registrationForm.plainPassword) }}
            <!-- input -->
            {{ form_widget(registrationForm.plainPassword, {
                "attr": { 'class': "form-control " ~ (registrationForm.plainPassword.vars.errors|length >0 ? "input-error" : '')}
            }) }}
            <!-- errors -->
            {{ form_errors(registrationForm.plainPassword, {"attr":{ "class": 'p-error'}}) }}
        </div>
        <div class="label-form">
            {{ form_label(registrationForm.pseudo) }}
            {{ form_widget(registrationForm.pseudo, {
                "attr": { 'class': "form-control " ~ (registrationForm.plainPassword.vars.errors|length >0 ? "input-error" : '')}
            }) }}
            {{ form_errors(registrationForm.pseudo, {"attr":{ "class": 'p-error'}}) }}
        </div>
        <div class="label-form">
            {{ form_label(registrationForm.image) }}
            {{ form_widget(registrationForm.image) }}
            {{ form_errors(registrationForm.image) }}
        </div>
        <div class="label-form-agreement">
            {{ form_label(registrationForm.agreeTerms) }}
            {{ form_widget(registrationForm.agreeTerms) }}
            {{ form_errors(registrationForm.agreeTerms) }}
        </div>    
        <button type="submit" class="validate-btn">Enregistrer</button>
    {{ form_end(registrationForm) }}
</dvi>
{% endblock %}

{# templates/article/user_homepage.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Espace Utilisateur{% endblock %}

{% block body %}
    <div class="user-profil">
        <a href="{{ path('user_edit') }}" title="Accéder à mon profil">
            <img src="{{ asset('images/' ~ user.image) }}" alt="Photo de {{ user.pseudo }}">
        </a>
            <h2>Bienvenue {{ user.pseudo }} </h2>
    </div>
    <section class="container published-article">
        <div class="banner-list">
            <div class="secondary-btn">
                {# <a href="{{ path('article_new') }}">Créer un nouvel article</a> #}
            </div>
            <h4>Mes articles publiés</h4>
            <div class="card-list">
            {% for article in published_articles %}
                {% include 'article/fragments/_card_article.html.twig' %}
            {% endfor %}
            </div>           
        </div>
    </section>
    <section class="container unpublished-article">
        <div class="banner-list">
            <h4>Mes articles non publiés</h4>
            <div class="card-list">
            {% for article in unpublished_articles %}
                {% include 'article/fragments/_card_article.html.twig' %}
            {% endfor %}
            </div>           
        </div>
    </section>

{% endblock %}